<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/ivRestaurantImage"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1.2"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_drawer_big_cart"
            />

        <LinearLayout
            android:id="@+id/llNameCost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="Sada Taba"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tvPricePerPerson"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="300/person"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/rupee"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="2"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/ivAddToFavourite"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/ic_favorite_heart_"
                android:background="@color/white"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvRestaurantRating"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/yellow"
                android:text="4.5"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_weight="1"
                />



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>